{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI (uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
      
            "args": [
              "app.main:app",
              "--reload",
              "--port", "8000"
            ],
      
            "env": { "PYTHONPATH": "${workspaceFolder}" }, 
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
          }
    ]
}